<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_background_portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="100dp"
            android:text="@string/welcome_to_comfostays"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/login_screen_emailAddress_edtxt"
            style="@style/edittext_style"
            android:hint="@string/user_name"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/login_screen_password_edtxt"
            style="@style/edittext_style"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_screen_signup_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_box_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_bottom_space"
            android:background="@drawable/button_rounded_bg"
            android:text="@string/login"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/login_screen__register_new_user_txt"
            style="@style/textview_style"
            android:layout_marginTop="20dp"
            android:onClick="onClickRegisterButton"
            android:text="@string/new_user"
            android:textColor="#FFFFFF" />

        <!--<TextView-->
            <!--android:id="@+id/loginPage_textView_register_new_user_text_signup"-->
            <!--style="@style/textview_style"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:text="@string/signup"-->
            <!--android:textColor="#FF0000"-->
            <!--android:textSize="20sp" />-->

        <TextView
            android:id="@+id/login_screen_forgotPassword_txt"
            style="@style/textview_style"
            android:text="@string/forgot_password"
            android:textColor="#2E9AFE"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</ScrollView>